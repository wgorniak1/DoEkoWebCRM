@model ILookup<string, DocumentFormat.OpenXml.OpenXmlElement>
@{
    ViewData["Title"] = "Create";
}

<h2>Test OpenXML</h2>

<form asp-action="OpenXml"
      asp-controller="Test"
      enctype="multipart/form-data" 
      method="post">
      @*
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-mode="UPDATE"
      data-ajax-update="">*@

    <div class="row">
        <div class="col-sm-4">
            <div class="form-group-sm">
                <input type="text" name="test" id="test"/>
                <label>checkbox</label>                
                <input type="file" id="word" name="word">
            </div>
        </div>
    </div>
    <input type="submit" value="odczytaj"/>
</form>
<br/>
@if (Model != null)
{
    <table border="1" cellspacing="0" cellpadding="0">
        <thead>
            <tr>
                <th>Klucz</th>
                <th>liczba wystąpień</th>
                <th>xml</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Key</td>
                    <td>@item.Count()</td>
                    <td>
                        <table>
                            <tbody>
                                @foreach (var item2 in item)
                                {
                                    <tr>
                                        <td>@item2.OuterXml</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot></tfoot>
    </table>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script title ="test" type="text/javascript">

    </script>
}
