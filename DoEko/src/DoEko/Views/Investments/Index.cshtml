@model IEnumerable<DoEko.Models.DoEko.Investment>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InspectionStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LandRegisterNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlotNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InspectionStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LandRegisterNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlotNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InvestmentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InvestmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InvestmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
