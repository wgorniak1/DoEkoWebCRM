@using DoEko.ViewModels
@model IEnumerable<DoEko.Models.DoEko.Contract>

@{
    ViewData["Title"] = "Index";
}

<h2>Umowy</h2>

<p>
    <a asp-action="Create">Utwórz nową</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project.ShortDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContractDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortDescription)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.FullfilmentDate)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Type)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Project.ShortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContractDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.FullfilmentDate)
            </td>*@
            <td>
                @item.Status.DisplayName()
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContractId">Edytuj</a> |
                @*<a asp-action="Details" asp-route-id="@item.ContractId">Details</a>*@ |
                <a asp-action="Delete" asp-route-id="@item.ContractId">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
