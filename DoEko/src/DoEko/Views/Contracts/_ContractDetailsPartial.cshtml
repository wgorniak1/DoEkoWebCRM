@using DoEko.Controllers.Extensions
@model DoEko.Models.DoEko.Contract

<div class="form-horizontal">

    <div class="form-group">
        <label asp-for="Project.ProjectId" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.Project.ShortDescription)
            </p>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <span class="form-control-static">
                @Model.Status.DisplayName()
            </span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CompanyId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.Company.Name)
            </p>        
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <p class="form-control-static">
                @Model.Type.DisplayName()
            </p>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Number" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <span class="form-control-static">
                @Html.DisplayFor(model => model.Number)
            </span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ContractDate" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.ContractDate)
            </p>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="FullfilmentDate" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.FullfilmentDate)
            </p>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ShortDescription" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <span class="form-control-static">
                @Html.DisplayFor(model => model.ShortDescription)
            </span>
        </div>
    </div>

</div>