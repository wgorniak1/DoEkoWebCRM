@using DoEko.Models.DoEko.Addresses
@using DoEko.Models.DoEko
@model IAddressRelated

<div class="form-group">
    <label asp-for="Address.Street" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Address.Street" class="form-control" />
        <span asp-validation-for="Address.Street" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Address.BuildingNo" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Address.BuildingNo" class="form-control" />
        <span asp-validation-for="Address.BuildingNo" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Address.ApartmentNo" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Address.ApartmentNo" class="form-control" />
        <span asp-validation-for="Address.ApartmentNo" class="text-danger" />
    </div>
</div>
<div class="form-group">
    @*@Html.LabelFor(model => model.Address.PostalCode)*@
    <label asp-for="Address.PostalCode" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Address.PostalCode" 
               placeholder="00-000"
               class="form-control" asp-format="{0:##-###}"/>
        <span asp-validation-for="Address.PostalCode" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Address.City" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Address.City" class="form-control" />
        <span asp-validation-for="Address.City" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Address.StateId" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="Address.StateId" class="form-control" asp-items="ViewBag.StateId"></select>
    </div>
</div>
<div class="form-group">
    <label asp-for="Address.DistrictId" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="Address.DistrictId" class="form-control" asp-items="ViewBag.DistrictId"></select>
    </div>
</div>
<div class="form-group">
    <label asp-for="Address.CommuneId" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="Address.CommuneId" class="form-control" asp-items="ViewBag.CommuneId"></select>
        <input asp-for="Address.CommuneType" class="form-control" type="hidden"/>
    </div>
</div>
