@using DoEko.Models.DoEko.Addresses
@using DoEko.Models.DoEko
@model IAddressRelated
<input type="hidden" asp-for="Address.AddressId" />
<div class="form-group">
    <label asp-for="Address.Street" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Address.Street" class="form-control Address" />
        <span asp-validation-for="Address.Street" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Address.BuildingNo" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Address.BuildingNo" class="form-control Address" />
        <span asp-validation-for="Address.BuildingNo" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Address.ApartmentNo" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Address.ApartmentNo" class="form-control Address" />
        <span asp-validation-for="Address.ApartmentNo" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Address.PostalCode" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Address.PostalCode" 
               class="form-control Address" />
        <span asp-validation-for="Address.PostalCode" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Address.City" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Address.City" class="form-control Address" />
        <span asp-validation-for="Address.City" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Address.StateId" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="Address.StateId" class="form-control address-state" data-address-key="@Model.AddressId" asp-items="ViewBag.StateId">
            <option value="">Wybierz</option>
        </select>
        
        <span asp-validation-for="Address.StateId" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Address.DistrictId" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="Address.DistrictId" class="form-control address-district" data-address-key="@Model.AddressId" asp-items="ViewBag.DistrictId">
            <option value="">Wybierz</option>
        </select>
        <span asp-validation-for="Address.DistrictId" class="text-danger" />        
    </div>
</div>
<div class="form-group">
    <label asp-for="Address.CommuneId" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="Address.CommuneId" class="form-control address-commune" data-address-key="@Model.AddressId" asp-items="ViewBag.CommuneId" >
            <option value="">Wybierz</option>
        </select>
        <span asp-validation-for="Address.CommuneId" class="text-danger" />
        <input asp-for="Address.CommuneType" class="form-control address-communetype" data-address-key="@Model.AddressId" type="hidden"/>
    </div>
</div>
<div class="form-group">
    <label asp-for="Address.CountryId" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="Address.CountryId" class="form-control" asp-items="ViewBag.CountryId"></select>
        <span asp-validation-for="Address.CountryId" class="text-danger" />    
    </div>
</div>