@model DoEko.Models.DoEko.Survey.SurveyHotWater
@using DoEko.Controllers.Extensions
@using DoEko.Models.DoEko.Survey
@using DoEko.Models.Identity
@{
    ViewData["Title"] = "Ankieta: " + Model.RSEType.DisplayName() + " (" + Model.Type.DisplayShortName() + ')';
}

<!-- Navigation -->
@if (User.IsInRole(Roles.Inspector))
{
    <ol class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Home"><span class="glyphicon glyphicon-home"></span></a></li>
        <li><a asp-action="List" asp-controller="Investments">Moje inspekcje</a></li>
        <li><a asp-action="Details" asp-controller="Investments" asp-route-Id="@Model.InvestmentId">Inwestycja @Model.Investment.Address.SingleLine</a></li>
        <li class="active">@Model.RSEType.DisplayName() (@Model.Type.DisplayShortName())</li>
    </ol>
}
else
{
    <ol class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Home"><span class="glyphicon glyphicon-home"></span></a></li>
        <li><a asp-action="Index" asp-controller="Projects">Lista Projektów</a></li>
        <li><a asp-action="Details" asp-controller="Projects" asp-route-Id="@Model.Investment.Contract.ProjectId">Projekt @Html.DisplayFor(model => model.Investment.Contract.Project.ShortDescription)</a></li>
        <li><a asp-action="Details" asp-controller="Contracts" asp-route-Id="@Model.Investment.ContractId">Umowa @Html.DisplayFor(model => model.Investment.Contract.Number)</a></li>
        <li><a asp-action="Details" asp-controller="Investments" asp-route-Id="@Model.InvestmentId">Inwestycja @Model.Investment.Address.SingleLine</a></li>
        <li class="active">@Model.RSEType.DisplayName() (@Model.Type.DisplayShortName())</li>
    </ol>
}
<!--Static Survey Header-->
<div class="row">
    <div class="col-sm-3">
        <div class="form-group-sm">
            <label class="control-label">
                <i class="fa fa-plug" aria-hidden="true"></i> OZE
            </label>
            <p class="form-control-static">
                @Model.RSEType.DisplayName() (@Model.Type.DisplayShortName())
            </p>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group-sm">
            <label class="control-label">
                <i class="fa fa-map-marker" aria-hidden="true"></i> Adres inwestycji
            </label>
            @{ string MapsUrl = "https://google.com/maps/search/" + Html.UrlEncoder.Encode(Model.Investment.Address.SingleLine); }
            <p class="form-control-static">
            <a href="@MapsUrl" target="_blank">
                @Html.DisplayFor(model => model.Investment.Address.SingleLine)
            </a>
            </p>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group-sm">
            @if (User.IsInRole(Roles.Admin))
            {
                <label class="control-label">
                    <i class="fa fa-calendar" aria-hidden="true"></i> Data i czas inspekcji
                </label>
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.InspectionDateTime)
                </p>
            }
            else
            {
                <form id="SurveyInspectionDateTime"
                      asp-action="UpdateInspectionDateAjax"
                      asp-controller="Surveys"
                      data-ajax="true"
                      data-ajax-method="POST"
                      data-ajax-mode="UPDATE"
                      data-ajax-update=""
                      data-ajax-failure="InspectionDateTimePostFailure"
                      data-ajax-success="InspectionDateTimePostSuccess">
                    <input asp-for="SurveyId" type="hidden" />
                    <label class="control-label">
                        <i class="fa fa-calendar" aria-hidden="true"></i> Data i czas inspekcji
                    </label>
                    <input asp-for="InspectionDateTime" class="form-control inspectiondatetime" />
                    <span asp-validation-for="InspectionDateTime" class="text-danger" />
                </form>
            }
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group-sm">
            <label class="control-label">
                <i class="fa fa-cogs" aria-hidden="true"></i> Status inspekcji
            </label>
            @if (Model.Status == SurveyStatus.Cancelled)
            {
                @*@{ApplicationUser user = await UserManager.FindByIdAsync(Model.Investment.InspectorId.ToString());}
            @if (user != null)
            {
            @user.UserName
            }*@
                <p class="form-control-static" title="@Html.DisplayFor(model => model.CancelComments)">
                    @Model.Status.DisplayName() (@Model.CancelType.DisplayName())
                </p>
            }
            else
            {
                <p class="form-control-static">
                    @Model.Status.DisplayName()
                </p>
            }
        </div>
    </div>
</div>
<hr />
@*STEP WIZARD*@
@await Html.PartialAsync("_NavigationBarPartial", Model)
<!--BODY-->
<div class="tab-content container-fluid">
    <div id="Dynamic" class="tab-pane fade in active">
        @await Component.InvokeAsync("InvestmentGeneralInfo", new { investmentId = Model.InvestmentId, mode = "Edit" })
    </div>
    <input type="hidden" id="MaintainedSurveyId" form="Null" value="@Model.SurveyId" />
</div>
    
