@{
    ViewData["Title"] = "Lista Projektów";
}

<!--Navigation-->
<ol class="breadcrumb">
    <li><a asp-action="Index" asp-controller="Home"><span class="glyphicon glyphicon-home"></span></a></li>
    <li class="active">@ViewData["Title"]</li>
</ol>

<!--Title-->
<h2>@ViewData["Title"]</h2>
<hr />
<!--List-->
<div class="container-fluid">
    <form class="form-inline" action="/" method="get">
        <div class="row" id="toolbar">
            <div class="col-lg-4">
                <div class="form-group">
                    <button type="button" id="projectList-refresh" class="btn btn-sm btn-default" title="Odśwież"><span class="glyphicon glyphicon-refresh"></span></button>
                    <button type="button" id="projectList-summary" class="btn btn-sm btn-default"><span>Wł./Wył. Sumy</span></button>
                    <a asp-action="Create" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-plus"></span>Nowy</a>
                </div>
            </div>
            <div class="col-lg-8 text-right">
                <div class="form-group">
                    <label for="status" class="control-label">Status</label>
                    <select class="form-control input-sm" title="Status projektu" id="status" name="status">
                        <option value="0">Nowy</option>
                        <option value="1">W trakcie realizacji</option>
                        <option value="2">Zweryfikowany</option>
                        <option value="3">Zakończony</option>
                        <option value="4">Zamknięty</option>
                        <option value="5">Wszystkie</option>
                        <option value="6" selected>Nie zamknięte</option>
                        <option value="7">Nie zakończone</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name" class="control-label">Nazwa</label>
                    <input type="text" class="form-control input-sm" id="name" placeholder="wyszukaj...">
                </div>
                <button type="button" class="btn btn-sm btn-default" id="projectList-filter" title="Filtruj"><span class="glyphicon glyphicon-filter"></span></button>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped dt-responsive dataTable nowrap no-footer dtr-inline collapsed small"
                   id="ProjectList"
                   style="width:100%;">
            </table>
        </div>
    </div>
</div>

@section stylesheets{
    @{await Html.RenderPartialAsync("_DataTablesCSSPartial");}
}
@section scripts{
    @{await Html.RenderPartialAsync("_DataTablesScriptsPartial");}
    <environment names="Development">
        <script type="text/javascript" src="~/js/ProjectList.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script type="text/javascript" src="~/js/ProjectList.min.js" asp-append-version="true"></script>
    </environment>
}
